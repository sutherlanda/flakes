{
  description = "Custom node packages built with node2nix";

  inputs = {
    # Package sets
    nixpkgs.url = "github:nixos/nixpkgs/nixpkgs-unstable";
    flake-utils.url = "github:numtide/flake-utils";
  };

  outputs = inputs@{ self, nixpkgs, flake-utils, ... }:
    flake-utils.lib.eachDefaultSystem (system:
      let
        pkgs = import nixpkgs {
          inherit system;
        };
        nodePackages = import ./default.nix { pkgs = nixpkgs.legacyPackages.${system}; }; 
        prettierd = nodePackages."@fsouza/prettierd";
        sort-imports-plugin = nodePackages."@trivago/prettier-plugin-sort-imports";
      in
      rec {
        packages = with pkgs; {
          inherit prettierd;
          inherit sort-imports-plugin; 

        };

        overlay = final: prev: with pkgs; {
          inherit prettierd;
          inherit sort-imports-plugin;
        };

        defaultPackage = packages.prettierd;
      });
} 
